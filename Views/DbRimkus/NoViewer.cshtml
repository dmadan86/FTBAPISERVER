
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <title>No Default Viewer</title>
    <!--<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:300,900">-->
    <link rel="stylesheet">
    <style>

h1 {
  font-siez: $h1-font-size;
  font-weight: $h1-font-weight;
  line-height: 1.1em;
  margin: 0;
}
  body {
            font-family: 'Verdana', sans-serif;
            font-size: 14px;/*smaller*/ 
        }
h2 {
  font-size: $h2-font-size;
  font-weight: $h2-font-weight;
  line-height: 1.1em;
  margin: 0;
}


svg {
  height: auto;
  max-width: 100%;
}

.container {
  left: 50%;
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
}

.display-table {
  display: table;
  width: 100%;
}

.display-table-cell {
  display: table-cell;
  vertical-align: middle;
}

.icons {
  display: none;
}

.icon {
  display: inline-block;
  height: 3em;
  width: 3em;
}

.icon-left {
  margin-right: 1em;
}

.icon-right {
  margin-left: 1em;
}

.icon-x {
  background-color: $color-icon-x-bg;
  border-radius: 50%;
  fill: $color-icon-x;
  padding: .5em;
}

.page-404 {
  background: radial-gradient(ellipse farthest-side at right top, $color-bg-start 0%, $color-bg-end 100%) no-repeat;
}

.message {
  background-color: $color-message-bg;
  box-shadow: 0 0 20px rgba(0, 0, 0, .5);
  padding: 1em 2em;
  text-transform: uppercase;

  h1 {
    font-weight: $h1-font-weight;
  }

  h2 {
    font-weight: $h2-font-weight;
  }

}

.animated {
  animation-duration: 1s;
  animation-fill-mode: both;
}

#headerWrapper {
position:fixed;
width:100%;
top:150;
height: 100px; 
}
.BackgroundImage img {
    z-index: -1;
    position: fixed;
    margin-bottom: -366%;
    width: 50vw;
    right: 0;
    display: fixed;
}
.bounceIn {
  animation-name: bounceIn;
  animation-duration: .75s;
}

@@keyframes bounceIn {

  0%, 20%, 40%, 60%, 80%, 100% {
    transition-timing-function: cubic-bezier(.215, .61, .355, 1);
  }

  0% {
    opacity: 0;
    transform: scale3d(.3, .3, .3);
  }

  20% {
    transform: scale3d(1.1, 1.1, 1.1);
  }

  40% {
    transform: scale3d(.9, .9, .9);
  }

  60% {
    opacity: 1;
    transform: scale3d(1.03, 1.03, 1.03);
  }

  80% {
    transform: scale3d(.97, .97, .97);
  }
  100% {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }

}

    </style>
</head>

<body class="NoViewer">


    <div id="headerWrapper">
        <img src="@ViewBag.fileloc" alt="Drag and save" draggable="true" data-rimkus="@ViewBag.rimkus" style="float:right;">
    </div>
    <div class="container" style="top:200px;">



        <div class="message animated bounceIn">

            <div class="display-table">

                <div class="display-table-cell">

                    <svg class="icon icon-left icon-x"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-x"></use></svg>

                </div>

                <div class="display-table-cell" style="top:300px;">

                    <h1>Cannot be viewed on Server</h1>
                    <h2>But you can drag the top left image and Save!</h2>

                </div>

            </div>

        </div>

    </div>

    <svg class="icons" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><symbol viewBox="0 0 512 512" id="icon-x"><title>x</title><path d="M438.393 374.595L319.757 255.977l118.62-118.63-63.782-63.74-118.6 118.618-118.62-118.603-63.768 63.73 118.64 118.63L73.62 374.626l63.73 63.768 118.65-118.66 118.65 118.645z" /></symbol></svg>

</body>
</html>

